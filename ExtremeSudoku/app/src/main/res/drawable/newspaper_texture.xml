<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Ana arka plan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#C4BFB4"/>
        </shape>
    </item>
    
    <!-- Buruşuk efekt - gölge desenleri -->
    <item>
        <bitmap
            android:gravity="fill"
            android:tileMode="repeat"
            android:dither="true"
            android:alpha="0.08"/>
    </item>
    
    <!-- Gradient overlay - daha gerçekçi buruşuk his -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="200dp"
                android:centerX="0.3"
                android:centerY="0.3"
                android:startColor="#15000000"
                android:centerColor="#08000000"
                android:endColor="#00000000"/>
        </shape>
    </item>
    
    <!-- İkinci gradient - farklı noktadan -->
    <item>
        <shape android:shape="rectangle">
            <gradient
                android:type="radial"
                android:gradientRadius="250dp"
                android:centerX="0.7"
                android:centerY="0.6"
                android:startColor="#10000000"
                android:centerColor="#05000000"
                android:endColor="#00000000"/>
        </shape>
    </item>
</layer-list>
